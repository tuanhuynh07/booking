@model Booking.Models.LANGUAGE
@{
    ViewBag.Title = "Thêm mới ngôn ngữ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string strUrl = Request.Url.AbsoluteUri;
    string strPath = Request.ApplicationPath;
    string host = Request.Url.Host;
    string urlHome = "/";
    if (strPath != "/")
    {
        urlHome = strPath + urlHome;
    }
}
<section class="content-header">
    <h1>
        Thêm mới
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Admin</a></li>
        <li><a href="/AdminLanguage">Ngôn ngữ</a></li>
        <li class="active">Tạo mới</li>
    </ol>
</section>
<section class="content">
    @if (TempData["categogyNameError"] != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @TempData["categogyNameError"]
        </div>
    }
    @if (TempData["categogyImageError"] != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @TempData["categogyImageError"]
        </div>
    }
    <div class="row">
@using (Html.BeginForm("create", "AdminLanguage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin</h3>
                </div>
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label for="CATEGORY_Code">Mã <span style="color:red;">(*)</span></label>@Html.ValidationMessageFor(model => model.LANGUAGE_CODE, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(model => model.LANGUAGE_CODE, new { @class = "form-control", @placeholder = "Nhập Mã ngôn ngữ." })
                        </div>
                        <div class="form-group">
                            <label for="CATEGORY_NAME">Tên<span style="color:red;">(*)</span></label>@Html.ValidationMessageFor(model => model.LANGUAGE_NAME, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(model => model.LANGUAGE_NAME, new { @class = "form-control", @placeholder = "Nhập tên ngôn ngữ" })
                        </div>                        
                    </div>
                </div>
            </div>              
        </div>
        <div class="col-md-6">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Thuộc tính</h3>
                </div>
                <div class="box-body">                    
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("LANGUAGE_ACTIVE") Hiển thị
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("LANGUAGE_IS_PRIMARY") Là Ngôn ngữ chính
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box-footer">
                <div class="form-group">
                    <label style="color:red;"><i>(*) là trường bắt buột nhập.</i></label>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/AdminLanguage" class="btn btn-default">Quay lại</a>
            </div>
        </div>
}
    </div>
</section>

