@model Booking.Models.LANGUAGE
@{
    ViewBag.Title = "Cập nhật ngôn ngữ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Cập nhật Danh mục
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Admin</a></li>
        <li><a href="/AdminLanguage">Ngôn ngữ</a></li>
        <li class="active">Cập nhật</li>
    </ol>
</section>
<section class="content">
    @if (TempData["categogyNameError"] != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @TempData["categogyNameError"]
        </div>
    }   
    <div class="row">
@using (Html.BeginForm("edit", "AdminLanguage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Cập nhật ngôn ngữ</h3>
                </div>
                <div class="box-body">

                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label for="LANGUAGE_CODE">Mã<span style="color:red;">(*)</span></label>
                            @Html.TextBoxFor(model => model.LANGUAGE_CODE, new { @class = "form-control", @placeholder = "Nhập mã..." })
                        </div>
                        <div class="form-group">
                            <label for="LANGUAGE_NAME">Tên<span style="color:red;">(*)</span></label>
                            @Html.TextBoxFor(model => model.LANGUAGE_NAME, new { @class = "form-control", @placeholder = "Nhập tên..." })
                        </div>                                              
                    </div>
                </div>
            </div>              
        </div>
		<div class="col-md-6">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Thuộc tính</h3>
                </div>
                <div class="box-body">                    
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("LANGUAGE_ACTIVE") Hiển thị
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("LANGUAGE_IS_PRIMARY") Là Ngôn ngữ chính
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box-footer">
                <div class="form-group">
                    <label style="color:red;"><i>(*) là trường bắt buột nhập.</i></label>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/AdminLanguage" class="btn btn-default">Quay lại</a>
            </div>
        </div>
}
    </div>
</section>
